extends ../../../views/admin_layout 
block content 
    .row
        .col-12
            .box
                .box-header
                    .row
                        .col-10
                            h4.box-title Priority of approval role List
                        .col-2
                            a.waves-effect.btn.btn-primary.btn-small.pull-right(style="margin-top:-4px" href='/ar/add') Add Priority
                .box-body
                    .table-responsive
                        table.tableList.table.table-striped.table-bordered.display(style='width:100%')
                            thead
                                tr
                                    th Role
                                    th Priority 
                                    th Created At 
                                    th Updated At
                                    th Actions
                            tbody
                                - for (var i=0; i< data.length; i++)
                                    tr
                                        td #{data[i].roleSlug}
                                        td #{data[i].priority}
                                        td= moment(data[i].createdAt).format('YYYY-MM-DD')
                                        td= moment(data[i].updatedAt).format('YYYY-MM-DD')
                                        td 
                                            a.waves-effect.waves-circle.btn.btn-circle.btn-success.btn-xs.pr-5(href="/ar/edit/"+data[i]['_id']) 
                                                i.ti-pencil
                                            |  
                                            button.deleteBtn.waves-effect.waves-circle.btn.btn-circle.btn-danger.btn-xs(id=data[i]['_id'])
                                                i.ti-trash

