extends ../../../views/admin_layout 
block content 
    .col-md-12.col-12
        .box
            .box-header.with-border
                h4.box-title Add Role Details
            // /.box-header
            form#userUpdateForm.form(action='/roles/add' method='POST')
                .box-body
                    .row
                        .col-md-3
                            .form-group
                                label.form-label Label
                                input.form-control(type='text' name='label' placeholder='Label')
                        .col-md-3
                            .form-group
                                label.form-label Number
                                input.form-control(type='number' name='number' min="1" placeholder='Number')
                        .col-md-3
                            .form-group
                                label.form-label Slug
                                input.form-control(type='text' name='slug' placeholder='slug')
                .box-footer.pull-right
                    a.btn.btn-warning.me-1(href='/roles')
                        i.ti-trash
                        |  Cancel
                    button.btn.btn-primary(type='submit')
                        i.ti-save-alt
                        |  Save
        // /.box
