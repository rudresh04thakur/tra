                h4.box-title Settings
                h6.box-subtitle
                | Select specific tab of settings 
            // /.box-header
            .box-body
                // Nav tabs
                ul.nav.nav-tabs(role='tablist')
                    li.nav-item
                        a.nav-link.active(data-bs-toggle='tab' href='#email' role='tab')
                            span.hidden-sm-up
                            i.ion-home
                            span.hidden-xs-down &nbsp; Email
