                // Tab panes
                .tab-content.tabcontent-border
                    #email.tab-pane.active(role='tabpanel')
                        .p-15
                            form#userUpdateForm.form(action='/settings/mailer-update' method='POST')
                                .box-body
                                    .row
                                        .col-md-4
                                            .form-group
                                                label.form-label Email Id
                                                input.form-control(type='text' name='emailId' placeholder='Email ID')
                                        .col-md-4
                                            .form-group
                                                label.form-label Password
                                                input.form-control(type='password' name='password' placeholder='Password')
                                        .col-md-4.pull-right(style="margin-top:23px")
                                            button.btn.btn-primary.me-2(type='submit')
                                                i.ti-save-alt
                                                |  Update
                                            a.btn.btn-warning(href='/settings')
                                                i.ti-trash
                                                |  Cancel
