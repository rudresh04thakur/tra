header.main-header
	.d-flex.align-items-center.logo-box.justify-content-start
		// Logo
		a.logo(href='/')
			// logo
			.logo-mini.w-30
				span.light-logo
					img(src='/images/logo-letter.png' alt='logo')
				span.dark-logo
					img(src='/images/logo-letter.png' alt='logo')
			.logo-lg
				span.light-logo
					img(src='/images/logo-dark-text.png' alt='logo')
				span.dark-logo
					img(src='/images/logo-light-text.png' alt='logo')
	// Header Navbar
	nav.navbar.navbar-static-top
		// Sidebar toggle button
		.app-menu
			ul.header-megamenu.nav
				li.btn-group.nav-item
					a.waves-effect.waves-light.nav-link.push-btn.btn-outline.no-border(href='#' data-toggle='push-menu' role='button')
						img.img-fluid.svg-icon(src='/images/svg-icon/collapse.svg' alt='')
		.navbar-custom-menu.r-side
			ul.nav.navbar-nav
				// Notifications
				li.dropdown.notifications-menu
					a.waves-effect.waves-light.dropdown-toggle.btn-outline.no-border(href='#' data-bs-toggle='dropdown' title='Notifications')
						img.img-fluid.svg-icon(src='/images/svg-icon/notifications.svg' alt='')
					ul.dropdown-menu.animated.bounceIn
						li.header
							.p-20
								.flexbox
									div
										h4.mb-0.mt-0 Notifications
									div
										a.text-danger(href='#') Clear All
						li
							// inner menu: contains the actual data
							ul.menu.sm-scrol
								li
									a(href='#')
										i.fa.fa-users.text-info
										|  Curabitur id eros quis nunc suscipit blandit.
						li.footer
							a(href='#') View all
				// User Account
				li.dropdown.user.user-menu
					a.waves-effect.waves-light.dropdown-toggle.btn-outline.no-border(href='#' data-bs-toggle='dropdown' title='User')
						img.img-fluid.svg-icon(src='/images/svg-icon/user.svg' alt='')
					ul.dropdown-menu.animated.flipInX
						li.user-body
							a.dropdown-item(href='/logout')
								i.ti-lock.text-muted.me-2
								|  Logout
